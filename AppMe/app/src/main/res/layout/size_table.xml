<?xml version="1.0" encoding="utf-8"?>
<TableLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<TableRow
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@android:color/white">

		<TextView
			android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_column="0"
			android:text="@string/app_size_details"
			android:gravity="center"
			android:textColor="#FF000000"/>

		<TextView
			android:layout_weight="2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/app_location_internal"
			android:layout_column="1"
			android:gravity="center"
			android:textColor="#FF000000"/>

		<TextView
			android:layout_weight="2"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/app_location_external"
			android:layout_column="2"
			android:gravity="center"
			android:textColor="#FF000000"/>

	</TableRow>

	<TableRow
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/app_code_size"
			android:layout_column="0"
			android:gravity="center"
			android:textColor="#FFFFFFFF"/>

		<TextView
			android:layout_weight="2"
			android:id="@+id/size_code"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_column="1"
			android:gravity="center"
			android:textColor="#FFFFFFFF"/>

		<TextView
			android:layout_weight="2"
			android:id="@+id/size_ext_code"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_column="2"
			android:gravity="center"
			android:textColor="#FFFFFFFF"/>

	</TableRow>

	<TableRow
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@android:color/white">

		<TextView
			android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/app_data_size"
			android:layout_column="0"
			android:gravity="center"
			android:textColor="#FF000000"/>

		<TextView
			android:layout_weight="2"
			android:id="@+id/size_data"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_column="1"
			android:gravity="center"
			android:textColor="#FF000000"/>

		<TextView
			android:layout_weight="2"
			android:id="@+id/size_ext_data"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_column="2"
			android:gravity="center"
			android:textColor="#FF000000"/>

	</TableRow>

	<TableRow
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/app_cache_size"
			android:layout_column="0"
			android:gravity="center"
			android:textColor="#FFFFFFFF"/>

		<TextView
			android:layout_weight="2"
			android:id="@+id/size_cache"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_column="1"
			android:gravity="center"
			android:textColor="#FFFFFFFF"/>

		<TextView
			android:layout_weight="2"
			android:id="@+id/size_ext_cache"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_column="2"
			android:gravity="center"
			android:textColor="#FFFFFFFF"/>

	</TableRow>

	<TableRow
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@android:color/white">

		<TextView
			android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/app_obb_size"
			android:layout_column="0"
			android:gravity="center"
			android:textColor="#FF000000"/>

		<TextView
			android:layout_weight="2"
			android:text="--"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_column="1"
			android:gravity="center"
			android:textColor="#FF000000"/>

		<TextView
			android:layout_weight="2"
			android:id="@+id/size_ext_obb"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_column="2"
			android:gravity="center"
			android:textColor="#FF000000"/>

	</TableRow>

	<TableRow
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<TextView
			android:layout_weight="1"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="@string/app_media_size"
			android:layout_column="0"
			android:gravity="center"
			android:textColor="#FFFFFFFF"/>

		<TextView
			android:layout_weight="2"
			android:text="--"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_column="1"
			android:gravity="center"
			android:textColor="#FFFFFFFF"/>

		<TextView
			android:layout_weight="2"
			android:id="@+id/size_ext_media"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_column="2"
			android:gravity="center"
			android:textColor="#FFFFFFFF"/>

	</TableRow>

</TableLayout>

